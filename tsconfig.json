{
  "compilerOptions": {
    "target": "ESNext",                               
    "module": "ESNext",                              
    "outDir": "./dist",                         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,            
    "isolatedModules": true,       
    "declaration": true,                 
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["./src"]
}
