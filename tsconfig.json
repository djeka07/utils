{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "ESNext",                              
    "outDir": "build",                         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,            
    "isolatedModules": true,                        
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["./src"]
}
